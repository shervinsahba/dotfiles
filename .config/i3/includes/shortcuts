# polybar toggle
bindsym $mod+Shift+b exec --no-startup-id polybar-msg cmd toggle

# tdrop - dropdown floating windows
bindsym F12 exec --no-startup-id tdrops kitty
bindsym $mod+Ctrl+a exec --no-startup-id tdrops pavucontrol
bindsym $mod+Ctrl+b exec --no-startup-id tdrops blueman-manager
bindsym $mod+Ctrl+z exec --no-startup-id tdrops zotero

# lockscreen
bindsym $mod+Shift+Ctrl+Delete exec --no-startup-id xsecurelock

# rofi launchers
bindsym $mod+d exec --no-startup-id "~/.config/rofi/launcher.sh"

# terminal
bindsym $mod+Return exec kitty --name kitty-shortcut || i3-sensible-terminal

# screenshots
bindsym Print exec flameshot gui
bindsym $mod+Print exec flameshot screen -p ~/Downloads/Screenshots

# file manager
#bindsym $super+r exec kitty ranger --name ranger
bindsym $mod+Ctrl+t exec thunar


# internet browser
bindsym $mod+Ctrl+f exec firefox --new-window
